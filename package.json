{
  "name": "cyclical-mono",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev",
    "lint": "turbo lint --filter=!@repo/backend",
    "type-check": "turbo type-check --filter=!@repo/backend",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
