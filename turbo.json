{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_APP_URL",
        "CONVEX_DEPLOYMENT",
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "CLERK_SECRET_KEY",
        "NEXT_PUBLIC_S3_BUCKET_NAME",
        "NEXT_PUBLIC_S3_BUCKET_URL",
        "NEXT_PUBLIC_S3_FOLDER",
        "NEXT_PUBLIC_AWS_IDENTITY_POOL_ID",
        "LIVEKIT_API_KEY",
        "LIVEKIT_API_SECRET",
        "NEXT_PUBLIC_LIVEKIT_URL",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "@repo/backend#lint": {
      "inputs": ["!*"]
    },
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
